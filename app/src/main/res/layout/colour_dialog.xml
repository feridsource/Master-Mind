<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/red"
            android:layout_width="@dimen/hole_size"
            android:layout_height="@dimen/hole_size"
            android:layout_margin="@dimen/hole_margin"
            android:src="@drawable/circle_red"/>

        <ImageView
            android:id="@+id/orange"
            android:layout_width="@dimen/hole_size"
            android:layout_height="@dimen/hole_size"
            android:layout_margin="@dimen/hole_margin"
            android:src="@drawable/circle_orange"/>

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="@dimen/hole_size"
            android:layout_height="@dimen/hole_size"
            android:layout_margin="@dimen/hole_margin"
            android:src="@drawable/circle_yellow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/green"
            android:layout_width="@dimen/hole_size"
            android:layout_height="@dimen/hole_size"
            android:layout_margin="@dimen/hole_margin"
            android:src="@drawable/circle_green"/>

        <ImageView
            android:id="@+id/blue"
            android:layout_width="@dimen/hole_size"
            android:layout_height="@dimen/hole_size"
            android:layout_margin="@dimen/hole_margin"
            android:src="@drawable/circle_blue"/>

        <ImageView
            android:id="@+id/purple"
            android:layout_width="@dimen/hole_size"
            android:layout_height="@dimen/hole_size"
            android:layout_margin="@dimen/hole_margin"
            android:src="@drawable/circle_purple"/>

    </LinearLayout>

</LinearLayout>